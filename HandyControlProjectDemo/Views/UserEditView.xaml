<Window x:Class="HandyControlProjectDemo.Views.UserEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="{Binding IsAdd, Converter={StaticResource Boolean2StringConverter}, ConverterParameter=添加用户|编辑用户}"
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="White" 
            CornerRadius="10"
            Effect="{StaticResource EffectShadow4}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource PrimaryBrush}"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="{Binding IsAdd, Converter={StaticResource Boolean2StringConverter}, ConverterParameter=添加用户|编辑用户}"
                             Foreground="White"
                             VerticalAlignment="Center"
                             Margin="15,0,0,0"/>
                    <Button Style="{StaticResource ButtonIcon}"
                            hc:IconElement.Geometry="{StaticResource CloseGeometry}"
                            Foreground="White"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0"
                            Width="30"
                            Height="30"/>
                </Grid>
            </Border>

            <!-- 编辑表单 -->
            <StackPanel Grid.Row="1" Margin="30,20">
                <hc:TextBox Text="{Binding Username}"
                           hc:InfoElement.Title="用户名"
                           hc:InfoElement.Necessary="True"
                           Margin="0,0,0,15"/>
                <hc:TextBox Text="{Binding RealName}"
                           hc:InfoElement.Title="姓名"
                           hc:InfoElement.Necessary="True"
                           Margin="0,0,0,15"/>
                <hc:ComboBox SelectedValue="{Binding Role}"
                            hc:InfoElement.Title="角色"
                            ItemsSource="{Binding Source={StaticResource Roles}}"
                            Margin="0,0,0,15"/>
                <hc:ComboBox SelectedValue="{Binding Status}"
                            hc:InfoElement.Title="状态"
                            ItemsSource="{Binding Source={StaticResource Statuses}}"
                            Margin="0,0,0,15"/>
            </StackPanel>

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,30,0">
                <Button Content="保存"
                        Command="{Binding Save}"
                        Style="{StaticResource ButtonPrimary}"
                        Width="80"
                        Margin="0,0,10,0"/>
                <Button Content="取消"
                        Command="{Binding Cancel}"
                        Style="{StaticResource ButtonDefault}"
                        Width="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 